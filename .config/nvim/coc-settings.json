{
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"]
    }
  },
  "prettier.printWidth": 180,
  "explorer.keyMappings.global": {
    "dd": "delete",
    "p": "pasteFile",
    "h": "toggleHidden",
    "u": ["gotoParent", "collapse:recursive", "normal:G"],
    "t": ["quit", "normal:t"],
    "r": "rename",
    "a": "addFile",
    "A": "addDirectory",
    "vs": "open:vsplit",
    "C": ["wait", "collapse:recursive"],
    "gg": ["normal:1000k", "normal:j"],
    "X": "systemExecute",
		"F": "search:recursive",
  },
  "explorer.file.child.template": "[indent][filename omitCenter 1] [icon | 1] [modified][readonly] [diagnosticError & 1][diagnosticWarning & 1]",
  "explorer.floating.border.title": "",
  "explorer.floating.width": -50,
  "sql.database": "postgresql",
  "explorer.openAction.strategy": "previousWindow",
  "diagnostic.enableMessage": "always",
  "explorer.icon.enableNerdfont": true,
  "svelte.enable-ts-plugin": true,
  "tailwindCSS.jsLanguages": ["javascript", "javascriptreact", "reason", "typescriptreact"],
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
	"rust-analyzer.inlayHints.lifetimeElisionHints.enable": "always",
  "python.analysis.typeCheckingMode": "off",
	"pyright.disableProgressNotifications": true,
	"python.pythonPath": "/usr/bin/python3.8",
	"python.linting.pylintEnabled": true,
	"rust-analyzer.checkOnSave.enable": true,
	"explorer.floating.hideOnCocList": false
}
