{
	"editor.lineNumbers": "relative",
	"vim.useSystemClipboard": true,
	"vim.hlsearch": true,
	"vim.sneak": true,
	//"vim.sneakReplacesF": true,
	"vim.normalModeKeyBindingsNonRecursive": [
		{
			"before": [
				"+"
			],
			"commands": [
				":",				"<C-f>",				"i",				"S",				"/"
			]
		},
		{
			"before": [
				"k"
			],
			"after": [
				"g",
				"k"
			]
		},
		{
			"before": [
				"$"
			],
			"after": [
				"g",
				"$"
			]
		},
		{
			"before": [
				"^"
			],
			"after": [
				"g",
				"^"
			]
		},
		{
			"before": [
				"J"
			],
			"after": [
				"g",
				"J"
			]
		},
		{
			"before": [
				"m",
				"w"
			],
			"after": [
				"<leader>",
				"w"
			]
		},
		{"before": ["mb"], "after": ["<leader>", "b"]},
		{"before": ["e"], "after": ["<leader>", "e"]},
		{
            "before": ["]"],
            "commands": [
                "workbench.action.editor.nextChange",
            ],
            "silent": true
        },
		{
            "before": ["<space>"],
            "commands": [
				"editor.action.formatDocument"
            ],
            "silent": true
        },
		{
            "before": ["<C-g>", "d"],
            "commands": [
				"git.openChange"
            ],
            "silent": true
        },

		{
            "before": ["<C-g>", "l"],
            "commands": [
				"workbench.view.scm"
			],
        },

		{
            "before": ["<C-g>", "L"],
            "commands": [
				"gitlens.compareWorkingWith"
			],
        },
		{
			"before": ["<C-w>", "l"],
			"commands": [
				"workbench.action.compareEditor.focusPrimarySide"
			]
		},
		{
			"before": ["<C-w>", "h"],
			"commands": [
				"workbench.action.compareEditor.focusSecondarySide"
			]
		},
		{
			"before": ["<C-g>", "h"],
			"commands": [
				"workbench.action.files.revert"
			]
		},
		{"before": ["f"], "after": [ "s" ]},
		{"before": ["F"], "after": [ "S" ]},
		{"before": ["g", "z"], "commands": [ "workbench.action.findInFiles" ]},
		{"before": ["t", "n"], "commands": [ "workbench.action.openEditorAtIndex1" ]},
		{"before": ["t", "m"], "commands": [ "workbench.action.openEditorAtIndex2" ]},
		{"before": ["t", ","], "commands": [ "workbench.action.openEditorAtIndex3" ]},
		{"before": ["t", "."], "commands": [ "workbench.action.openEditorAtIndex4" ]},
		{"before": ["t", "/"], "commands": [ "workbench.action.openEditorAtIndex5" ]},
		{"before": ["t", "h"], "commands": [ "workbench.action.openEditorAtIndex6" ]},
		{"before": ["t", "j"], "commands": [ "workbench.action.openEditorAtIndex7" ]},
		{"before": ["t", "k"], "commands": [ "workbench.action.openEditorAtIndex8" ]},
		{"before": ["t", "l"], "commands": [ "workbench.action.openEditorAtIndex9" ]},
	],
	"vim.operatorPendingModeKeyBindingsNonRecursive": [
		{"before": ["i","w"], "after": ["i", "\\", "w"]},
	],
	"vim.normalModeKeyBindings": [
		{"before": ["w"], "after": ["\\", "w"]},
		{"before": ["b"], "after": ["\\", "b"]},
		{"before": ["e"], "after": ["\\", "e"]},
		{"before": ["s", "a"], "after": ["y", "s"]},
		{"before": ["s", "d"], "after": ["d", "s"]},
		{"before": ["s", "r"], "after": ["c", "s"]},
		{"before": ["]"], "commands": [ "workbench.action.compareEditor.nextChange" ]},
		{"before": ["R"], "commands": [ "editor.action.rename" ]},
	],
	"vim.visualModeKeyBindings": [
		{"before": ["s", "a"], "after": ["S"]},
		{"before": ["d", "a"], "after": ["d", "s"]},
		{"before": ["s", "r"], "after": ["c", "s"]},
	],
	"vim.handleKeys": {
		"<C-d>": true,
		"<C-s>": false,
		"<C-z>": false,
		"<C-w>": true
	},

	"vim.visualModeKeyBindingsNonRecursive": [
		{
			"before": [
				"V"
			],
			"after": [
				"^",
				"o",
				"$"
			]
		},
		{
			"before": [
				"p"
			],
			"after": [
				"p",
				"g",
				"v",
				"y"
			]
		},
		{
			"before": [
				"J"
			],
			"after": [
				"g",
				"J"
			]
		},
		{"before": ["m", "b"], "after": ["\\", "b"]},
		{"before": ["m", "e"], "after": ["\\", "e"]},
		{"before": ["m", "w"], "after": ["\\", "w"]},
		{"before": ["s", "a"], "after": ["y", "a"]},
		{"before": ["<space>"], "commands": ["editor.action.formatSelection"]},
	],
	"vim.insertModeKeyBindingsNonRecursive": [
		{
			"before": [
				"<C-u>"
			],
			"after": [
				"<Esc>",
				"<C-u>",
				"i"
			]
		},
		{
			"before": [
				"<C-d>"
			],
			"after": [
				"<Esc>",
				"<C-d>",
				"i"
			]
		},
		{
			"before": [
				"<C-v>"
			],
			"after": [
				"<Esc>",
				"v",
				"<C-v>"
			]
		}
	],
	"vim.camelCaseMotion.enable": true,
	"vim.surround": true,
	"[python]": {
		"editor.formatOnType": true
	},
	"workbench.editor.showTabs": true,
	"workbench.colorTheme": "SynthWave '84",
	"editor.inlineSuggest.enabled": true,
	"gitlens.currentLine.enabled": false,
	"gitlens.hovers.currentLine.over": "line",
	"gitlens.codeLens.enabled": false,
	"window.zoomLevel": -1,
}
